{
  "short_name": "React App",
  "name": "Extension Youtube",
  "manifest_version": 2,
  "version": "1.0",
  "browser_action": {
    "default_title": "Extension Youtube",
    "default_icon": "images/youtubex32.png",
    "icons": { 
      "16": "images/youtubex12.png",
      "24": "images/youtubex24.png",
      "32": "images/youtubex32.png",
      "64": "images/youtubex64.png",
      "128": "images/youtubex128.png"  
    }  
  },
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
	"permissions": ["activeTab", "declarativeContent", "storage", "tabs", "notifications",
		"http://*/*",
		"https://*/*"
	],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
